<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/header_img_time"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header_txt_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/header_img_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/header_img_time"
        app:layout_constraintTop_toTopOf="@+id/header_img_time"/>

    <TextView
        android:id="@+id/header_txt_ano_fundacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/header_txt_nome"
        app:layout_constraintStart_toStartOf="@+id/header_txt_nome"
        app:layout_constraintTop_toBottomOf="@+id/header_txt_nome" />

    <ImageView
        android:id="@+id/header_img_mundial"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/header_img_continental"
        app:layout_constraintEnd_toStartOf="@id/header_img_continental"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header_img_continental"/>

    <ImageView
        android:id="@+id/header_img_continental"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@id/header_img_nacional"
        app:layout_constraintStart_toEndOf="@+id/header_img_mundial"
        app:layout_constraintTop_toBottomOf="@+id/header_img_time"/>

    <ImageView
        android:id="@+id/header_img_nacional"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/header_img_continental"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/header_img_continental"
        app:layout_constraintTop_toTopOf="@+id/header_img_continental" />

    <TextView
        android:id="@+id/header_txt_count_mundial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/header_img_mundial"
        app:layout_constraintStart_toStartOf="@+id/header_img_mundial"
        app:layout_constraintTop_toBottomOf="@+id/header_img_mundial"/>

    <TextView
        android:id="@+id/header_txt_count_continental"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/header_img_continental"
        app:layout_constraintStart_toStartOf="@+id/header_img_continental"
        app:layout_constraintTop_toBottomOf="@+id/header_img_continental"/>

    <TextView
        android:id="@+id/header_txt_count_nacional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/header_img_nacional"
        app:layout_constraintStart_toStartOf="@+id/header_img_nacional"
        app:layout_constraintTop_toBottomOf="@+id/header_img_nacional" />

    <View
        android:id="@+id/header_view_h_separator"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#CCC"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>